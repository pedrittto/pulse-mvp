# GlobeNewswire RSS (Press Releases or chosen channel)
GLOBENEWSWIRE_RSS_URL=

# SEC EDGAR Atom “Latest Filings”
EDGAR_LATEST_ATOM_URL=
# Required by SEC Fair Access, e.g., PulseBot/1.0 (ops@yourdomain.com)
SEC_USER_AGENT=
# Optional filter, e.g., 8-K,6-K,S-1,10-K,10-Q
EDGAR_FORM_TYPES=


## Internal tick configuration (pulse-web)
TICK_MODE=internal
TICK_PERIOD_MS=3000

# CORS and SSE (backend)
# Comma-separated allowed origins; default dev is http://localhost:3000 if unset
CORS_ORIGIN=http://localhost:3000,https://your-prod-frontend.example
# Enable SSE route
SSE_ENABLED=1
# Heartbeat interval for SSE ping (ms)
SSE_HEARTBEAT_MS=15000

# Persistence (cold path)
PERSIST_ENABLED=1
FIRESTORE_COLLECTION_NAME=pulse_items_v1
# Path to a GCP service account file (not committed)
GOOGLE_APPLICATION_CREDENTIALS=./secrets/service-account.json
# Optional tuning
FLUSH_INTERVAL_MS=10000
DRAIN_DELAY_MS=250
MAX_QUEUE=5000

# Frontend (hydration)
NEXT_PUBLIC_RECENT_PATH=/api/recent

# Central scheduler
SCHED_CENTRAL=1
POLL_INTERVAL_MS=3000

